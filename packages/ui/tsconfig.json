{
	"extends": "../../tsconfig.json",
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.d.ts"]
}
